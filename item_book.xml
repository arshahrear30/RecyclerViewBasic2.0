<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativelayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:orientation="horizontal">

<!-- @layout Mouse Right Click>New>XML>Layout xml file>item_name  -->

    <ImageView
        android:id="@+id/imgBook"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/tfs"
        android:paddingBottom="5dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:gravity="start|center">
        <TextView
            android:id="@+id/tvBookName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:textStyle="normal"
            android:text="App Development Book"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tvWriterName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:textStyle="normal"
            android:text="A R Shahrear" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonGetBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get this book" />
    </LinearLayout>


</LinearLayout>
